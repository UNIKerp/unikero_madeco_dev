<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_custom_stocl" model="ir.ui.view">
            <field name="name">view_company_form_custom_stocl</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Delivery settings">                          
                        <group string="BL texts">
                            <field name="html_texte_bl" required="1" />                            
                        </group> 
                    </page>                     
                </xpath> 
            </field>
        </record>
    </data>
</odoo>