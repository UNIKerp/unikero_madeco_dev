<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--
        Product Template
    -->
	<record id="product_template_form_view_procurement_button_custom_droits" model="ir.ui.view">
        <field name="name">product_template_form_view_procurement_button_custom_droits</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_form_view_procurement_button" />
        <field name="arch" type="xml">        
            <xpath expr="//button[@name='399']" position="attributes">
                <attribute name="groups">stock.group_stock_manager</attribute>
            </xpath>       
        </field>
    </record> 
    <!--
        Product Product
    -->
    <record id="product_form_view_procurement_button_custom_droits" model="ir.ui.view">
        <field name="name">product_form_view_procurement_button_custom_droits</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_form_view_procurement_button" />
        <field name="arch" type="xml">        
            <xpath expr="//button[@name='399']" position="attributes">
                <attribute name="groups">stock.group_stock_manager</attribute>
            </xpath>       
        </field>
    </record> 
    <record id="product_product_view_form_easy_inherit_stock_custom_droits" model="ir.ui.view">
        <field name="name">product_product_view_form_easy_inherit_stock_custom_droits</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.product_product_view_form_easy_inherit_stock" />
        <field name="arch" type="xml">        
            <xpath expr="//button[@name='399']" position="attributes">
                <attribute name="groups">stock.group_stock_manager</attribute>
            </xpath>       
        </field>
    </record>   
</odoo>

