<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_custom_presta_billing" model="ir.ui.view">
            <field name="name">view_company_form_custom_presta_billing</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Calendar settings">
                        <group>
                            <group string="Calendar settings">
                                <field name="nb_days_worked_per_week" />
                                <field name="nb_weekend_days" invisible="1" />
                                <field name="zone_geo"/>
                            </group> 
                        </group>    
                    </page>                     
                </xpath> 
            </field>
        </record>
    </data>
</odoo>