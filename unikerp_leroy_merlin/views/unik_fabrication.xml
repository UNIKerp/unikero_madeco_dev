<?xml version="1.0" encoding="UTF-8"?>
<odoo>       
    <record model="ir.ui.view" id="unikerp_fabrication_tree_view">
        <field name="name">purchase.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <field name="origin" position="before">
				<field name="unik_ref_prestashop" />
			</field>
        </field>
    </record>
    <record model="ir.ui.view" id="unikerp_fabrication_form_view">
        <field name="name">purchase.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
				<field name="unik_ref_prestashop" readonly='1' force_save='1'/>
			</field>
        </field>
    </record>

    <record id="unikerp_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.unikerp</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field/tree/field[@name='name']" position="after">
                 <field name="unik_ref_prestashop" readonly="1" force_save="1"/>                       
            </xpath>   
        </field>
    </record>  

      <record id="unikerp_view_order_form1" model="ir.ui.view">
        <field name="name">sale.order.form.unikerp</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="apik_edi.view_order_form1_custom"/>
        <field name="arch" type="xml">
            <field name="comment_ftx_gen" position="after">
                 <field name="portail"/>                       
            </field>   
        </field>
    </record>  

    <record model="ir.ui.view" id="unikerp_mrp_tree_view">
        <field name="name">mrp.mrp_production.tree.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
				<field name="unik_ref_prestashop" />
			</field>
        </field>
    </record>
    <record model="ir.ui.view" id="unikerp_mrp_form_view">
        <field name="name">mrp.mrp_production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
				<field name="unik_ref_prestashop" readonly='1' force_save='1'/>
			</field>
        </field>
    </record>

</odoo>